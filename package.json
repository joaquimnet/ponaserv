    "@vitest/coverage-c8": "^0.25.2",
    "rome": "^10.0.1",
    "typescript": "^5.0.0",
    "vitepress": "^1.0.0-alpha.29",
    "vitest": "^0.25.2",
    "vue": "^3.2.45"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "express": "^4.18.2",
